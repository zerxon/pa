<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:padding="16dp">

    <TextView
        android:id="@+id/singin_logo"
        android:text="登录"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/signin_account"
        android:layout_below="@id/singin_logo"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:hint="手机号码"
        android:text="18344502419"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/signin_password"
        android:inputType="textPassword"
        android:layout_below="@id/signin_account"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:text="411513"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/signin_submit"
        android:layout_below="@id/signin_password"
        android:text="登录"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/signin_newaccount"
        android:layout_marginTop="16dp"
        android:layout_below="@id/signin_submit"
        android:text="注册新帐号"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout><!-- From: file:/E:/android/ProjectSpace/Pa/app/src/main/res/layout/fragment_signin.xml -->